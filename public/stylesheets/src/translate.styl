form
  clearfix()
  border-bottom: 1px solid $blue
  padding: 10px
  margin: 0 auto
  max-width: 500px

  &:hover
    background: #fafafa

  &:first-of-type
    border-top: 1px solid $blue

  p
    margin: 4px 0

  label
    display: block
    padding: 3px

  textarea
    display: block
    box-sizing: border-box
    height: 175px
    margin: 5px 0 0 0
    padding: 3px
    width: 100%

  button
    background: rgba(#000, 0.5)
    color: #fff
    float: right
    font-size: 14px
    font-weight: 700
    margin: 0 0 0 5px
    padding: 4px 7px
    text-shadow: 0 1px 0 rgba(#000, 0.5)

    &:hover
      background: rgba(#000, 0.7)
