html
  background: #f2f2f2
  color: $gray-dark
  font: $BASE_FONT_SIZE "Helvetica Neue", Arial, Helvetica, sans-serif
  height: 100%

body
  width: 960px
  margin: 0 auto
  height: 100%

  > h1
    background: #e0e0e0
    border-bottom: 1px solid $blue
    margin: 0
    padding: 5px

h1
  border-bottom: 1px solid $blue
  margin: 5px 0 8px 0
  padding-bottom: 8px

h2
  @extends #rule-below
  color: $blue
  font-size: 20px
  margin: 20px 0 20px
  padding-bottom: 5px

h3
  border-bottom: 2px solid
  font-weight: 500
  font-size: 22px
  margin: 10px 0
  padding-bottom: 5px

h2, h3
  .aux 
    float: right
    font-size: 12px
    margin-top: 5px
  
h4
  margin: 10px 0

hr
  border: 0
  border-top: 1px solid rgba(#000, 0.125)
  border-bottom: 1px solid $white
  margin: 20px 0

.none
  color: $gray
  font-style: italic

button
  background: transparent
  border: 0
  color: inherit
  cursor: pointer
  font: inherit
  margin: 0
  padding: 0

  &:disabled
    cursor: pointer
    opacity: 0.5
    pointer-events: none

input,
textarea
  background: $white
  border: 1px solid $gray
  box-shadow: 0 1px 0 $white
  font: inherit
  padding: 5px

img
  &.thin-frame
    border: 1px solid $white
    box-shadow: 0 1px 2px -1px $black
    box-sizing: border-box
  
a
  color: $blue
  text-decoration: none
  &:hover
    text-decoration: underline


#app
  margin: 0 auto
  max-width: 960px
  padding: 10px 0 0 0

body > footer
  background: $gray-less-light
  clear: both
  color: $gray
  font-size: 18px
  height: 50px
  line-height: 50px
  margin-top: -50px
  text-align: center

  .logo
    margin-top: -5px
    vertical-align: middle
  
  p
    margin: 0

ul#project-list
  margin: 0
  padding: 0

  li.project-item
    position: relative
    display: inline-block
    width: 200px
    height: 200px
    background: #ddd
    font-size: 16px
    margin: 0 10px 0 0

    &:hover
      font-weight: bold

    .project-title
      position: absolute
      top: 50%
      margin-top: -10px
      line-height: 20px
      text-align: center
      width: 200px